# Impede listagem de diretório
Options -Indexes

# Permite apenas tipos de arquivo específicos
<FilesMatch "\.(jpg|jpeg|png|gif|pdf|doc|docx)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Bloqueia arquivos PHP e executáveis
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Protege o .gitkeep e index.php
<FilesMatch "^(\.gitkeep|index\.php)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
